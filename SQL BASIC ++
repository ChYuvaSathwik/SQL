Q1. Find total number of orders for each customer
SELECT customer, COUNT(*) AS total_number_of_orders_each_customer
FROM orders
GROUP BY customer;

Q2. Find total amount spent by each customer
SELECT customer, SUM(amount) AS total_amount_spent_by_each_customer
FROM orders
GROUP BY customer;

Q3. Find average order amount for each category
SELECT category, AVG(amount) AS average_order_amount
FROM orders
GROUP BY category;

Q4. Find maximum order amount in each category
SELECT category, MAX(amount) AS max_order_amount_each_category
FROM orders
GROUP BY category;

Q5. Find customers whose total spent amount is greater than 40000
SELECT customer, SUM(amount)
FROM orders
GROUP BY customer
HAVING SUM(amount) > 40000;

Q6. Find categories having more than 2 orders
SELECT category, COUNT(*) AS total_orders
FROM orders
GROUP BY category
HAVING COUNT(*) > 2;

Q7. Find total revenue generated from each category
SELECT category, SUM(amount) AS total_revenue_each_category
FROM orders
GROUP BY category;

Q8. Find categories where average order amount is greater than 15000
SELECT category, AVG(amount)
FROM orders
GROUP BY category
HAVING AVG(amount) > 15000;

Q9. Find total number of orders in Electronics category
SELECT COUNT(*) AS total_number_of_orders_electronics
FROM orders
WHERE category = 'Electronics';

Q10. Find average order amount of Grocery category
SELECT AVG(amount) AS avg_order_amount_grocery
FROM orders
WHERE category = 'Grocery';
